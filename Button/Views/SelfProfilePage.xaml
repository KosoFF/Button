<Page
    x:Class="Button.Views.SelfProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Button.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding SelfProfileViewModel, Source={StaticResource ViewModelLocator}}">

    <ScrollViewer 
        VerticalScrollBarVisibility="Auto">

        <Grid
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="6*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button
                Background="White"
                Grid.Row="0"
                Grid.Column="0"
                Height="50"
                Width="50 "
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                Command="{Binding GoBackCommand}">
                <Image Source="../Assets/back.png"/>
            </Button>

            <Button
                Grid.Row="0" 
                Grid.Column="2"
                Height="50"
                Width="50 "
                Background="White"
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                Command="{Binding SettingsCommand}">
                <Image Source="../Assets/settings.png"/>
            </Button>

            <TextBlock Text="{Binding Title,
                TargetNullValue=ФИО,
                FallbackValue=ФИО}"
                Grid.Row="0"
                Grid.Column="1"
                Foreground="Black"
                FontFamily="Roboto"
                FontWeight="Medium"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
            <!--<Button Grid.Column="1"
                Grid.Row="1"
                    Grid.ColumnSpan="2"
                Width="300"
                Height="300"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                    Background="White"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding ChangeImageCommand}">
                <Image
                Source="..\..\Assets\photo-camera.png"/>
            </Button>-->
            <Button 
                Grid.Row="1"
                Grid.Column="1"
                Margin="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="White"
                HorizontalContentAlignment="Stretch" 
                VerticalContentAlignment="Stretch"
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                Command="{Binding ChangeImageCommand}">

                <Button.Content>
                    <Rectangle
                        Grid.Row="1"
                        Grid.Column="1"
                        RadiusX="150"
                        RadiusY="150"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="10"
                        >
                        <Rectangle.Fill>
                            <ImageBrush 
                        ImageSource="{Binding UserImage, TargetNullValue=../Assets/avatar.png, FallbackValue=../Assets/avatar.png}"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Button.Content>
            </Button>



            <Button
    		    Grid.Row="2"
    		    Grid.ColumnSpan="3"
                Height="40"
    		    Content="Мои голосования"
    		    HorizontalAlignment="Stretch"
    		    VerticalAlignment="Center"
    		    Foreground="#000000"
    		    FontFamily="roboto"
    		    FontWeight="Medium"
    		    FontSize="20"
    		    Background="Transparent"
                BorderBrush="Black"
                BorderThickness="0.5"
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                Command="{Binding MyRepliesCommand}"
                />
            <Button 
                Grid.Row="2"
                Height="35"
                Background="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Image
    		        Source="../Assets/edit.png"/>
            </Button>
        </Grid>
    </ScrollViewer>
</Page>
